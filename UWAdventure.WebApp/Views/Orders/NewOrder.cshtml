@model UWAdventure.WebApp.Models.NewOrderModel
@{
    ViewBag.Title = "Create New Order";
}

<h2>Create New Order</h2>

@using (Html.BeginForm("CreateOrder", "Orders", FormMethod.Post))
{
<div class="form-horizontal">

    <!--START of Store form field -->
    <div class="form-group">
        <label for="ddStore" class="col-sm-2 control-label">Store:</label>
        <div class="col-sm-10">
            @Model.Store.Name
            <input type="hidden" value="@Model.Store.StoreID"/>
        </div>
    </div>
    <!--END of Store form field -->
    <!--START of Sales Associate form field -->
    <div class="form-group">
        <label for="ddAssociate" class="col-sm-2 control-label">Sales Associate:</label>
        <div class="col-sm-10">
            <select id="ddAssociate" class="form-control" name="SalesAssociate">
                <option value="">~ Select associate ~</option>
                @foreach(var assoc in Model.Staff)
                {
                    <option value="@assoc.StaffID">@assoc.FirstName @assoc.LastName</option>
                }
            </select>
        </div>
    </div>
    <!--END of Sales Associate form field -->
    <!--START of Customer form field -->
    <div class="form-group">
        <label for="lstCustomer" class="col-sm-2 control-label">Customer:</label>
        <div class="col-sm-10">
            <select id="lstCustomer" class="form-control" name="Customer" size="7">
                <!--CustomerID    FirstName LastName -->
                @foreach (var customer in Model.Customers)
                {
                    <option value="@customer.CustomerID">@customer.FirstName @customer.LastName</option>
                }
            </select>
        </div>
    </div>
    <!--END of Customer form field -->
    <!--START of Products form field -->
    <div class="form-group">
        <label for="lstProduct" class="col-sm-2 control-label">Product:</label>
        <div class="col-sm-10">
            <select id="lstProduct" class="form-control" name="Product" size="7">
                @foreach (var product in Model.Products)
                {
                    <option value="@product.ProductID">@product.Name (@product.ListPrice.ToString("c"))</option>
                }

            </select>
        </div>
    </div>
    <!--END of Products form field -->
    <!--START of Quantity form field -->
    <div class="form-group">
        <label for="txtQuantity" class="col-sm-2 control-label">Quantity:</label>
        <div class="col-sm-10">
            <input id="txtQuantity" name="Quantity" type="text" placeholder="Qty" class="form-control" />
        </div>
    </div>
    <!--END of Quantity form field -->

    <!-- START Submit button-->
    <div class="form-group">
        <div class="col-md-offset-2 col-md-2 col-lg-1">
            <button type="submit" class="btn btn-primary">Create Order</button>
        </div>
        <div class="col-md-offset-1 col-md-2 col-lg-1">
            <button type="submit" class="btn btn-default">Cancel</button>
        </div>
    </div>
    <!-- END Submit button-->
</div>
}

